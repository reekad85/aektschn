<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3"> 
  <%= link_to image_tag(product.image_url, class: "img-responsive") %>
  <div class="overview">
    <h4><%= product.name %></h4>
    <p><%= product.description %></p>
    <p><%= product.colour %></p>
    <p><strong><%= product.price %></strong></p>
    <p>
      <span><%= link_to 'Show', product %></span>
      <span><%= link_to 'Edit', edit_product_path(product) %></span></span>
      <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </p>
  </div><!--/overview-->
</div><!--/col-->
