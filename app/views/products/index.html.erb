<p id="notice"><%= notice %></p>

<div class="container-fluid"> 
  <div class="header">
   <h1>Our Specialtea's</h1>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-lg-3">  
      <% @products.each do |product| %>
        <%= product.image_url %>
          <div class="overview">
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
            <p>
              <span><%= link_to 'Show', product %></span>
              <span>%= link_to 'Edit', edit_product_path(product) %></span></span>
              <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </p>
          </div><!--/overview-->
        <% end %>
    </div><!--/col-->
  </div><!--/row-->
</div><!--/container-->
<br>

